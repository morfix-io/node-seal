{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./src/tsc-out/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./src/tsc-out",
    "paths": {
      "seal_*": ["./src/bin/seal_*"]
    },
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": [ 
      "./src/custom_types",
      "./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/tsc-out"]
}
